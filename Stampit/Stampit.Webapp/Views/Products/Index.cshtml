@model IEnumerable<Stampit.Entity.Product>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Productname)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.RequiredStampCount)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.BonusDescription)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Price)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.MaxDuration)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Active)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Productname)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.RequiredStampCount)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.BonusDescription)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Price)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MaxDuration)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Active)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.Id })
			</td>
		</tr>
	}

</table>
<p>
	@Html.ActionLink("Create new", "Create", null, new { @class="btn btn-default" })
</p>

